@model WebApplication1.ViewModel.Customer
@{
    ViewBag.Title = "EditCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditCustomer</h2>
<div class="container">
    @using (Html.BeginForm())
    { 

<div class="form-group">
    @Html.LabelFor(c => c.Name)
    @Html.TextBoxFor(c => c.Name, new { @class = "form-control", autocomplete = "off" })
    @Html.ValidationMessageFor(c => c.Name)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.Gender)

    @Html.DropDownListFor(c => c.Gender, ViewBag.Gender as SelectList, null, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Gender)
</div>

<div class="form-group">
    @Html.LabelFor(c => c.BirthDate)
    @Html.TextBoxFor(c => c.BirthDate, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.BirthDate)
</div>
<div class="form-group">
    @Html.LabelFor(c => c.MembershipTypeId)
    @Html.DropDownListFor(c => c.MembershipTypeId, ViewBag.member as SelectList, null, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.MembershipTypeId)
</div>
<div class="form-group">
    <input type="submit" name=" cmdsubmit" value="submit" class="btn-primary" />
</div>
    }
</div>